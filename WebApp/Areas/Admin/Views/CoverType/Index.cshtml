@model IEnumerable<CoverType>

@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">


    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Cover Type</h2>

        </div>

        @*
            DO NOT USE SPACE IN asp-action AND asp-controller TAG HELPERS
        *@
        <div class="col-6 text-end">
            <a asp-controller="CoverType" asp-action="Create" class="btn btn-primary"> <i class="bi bi-plus-square"></i>&nbsp; Create New Cover</a>
        </div>

    </div>
    <br />

    <table class="table table-striped table-bordered">
        <thead class="text-center">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @*@Html.DisplayNameFor(model => model.CreatedDateTime)*@
                </th>
                <th>
                    DO
                </th>
                <th>
                    DO
                </th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td width="5%" class="text-center">
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td width="30%" class="text-center">
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>


                    <td width="10%">
                        <div class="w-100 btn-group" role="group">
                            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i>&nbsp; Edit</a>
                        </div>
                    </td>
                    <td width="10%">

                        <div class="w-100 btn-group" role="group">
                            <a class="btn btn-secondary" asp-action="Details" asp-route-id="@item.Id"> <i class="bi bi-trash3-fill"></i>&nbsp; Details</a>
                        </div>
                    </td>

                    <td width="10%">
                        <div class="w-100 btn-group" role="group">
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id"> <i class="bi bi-trash3-fill"></i>&nbsp; Delete</a>
                        </div>

                    </td>
                </tr>
            }
        </tbody>
    </table>
    @section Scripts{
        @{

            <partial name="_ValidationScriptsPartial" />
        }
    }
</div>