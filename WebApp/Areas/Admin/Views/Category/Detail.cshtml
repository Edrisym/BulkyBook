@model Category



<form method="post" asp-action="Detail">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Category Detail</h2>
            <hr />
        </div>

        <div class="mb-3">
            <label asp-for="Id" class="control-lable"></label>
            <input asp-for="Id" disabled class="form-control" />

        </div>

        <div class="mb-3">
            <label asp-for="Name" class="control-lable"></label>
            <input asp-for="Name" disabled class="form-control" />

        </div>

        <div class="mb-3">
            <label asp-for="DisplayOrder" class="control-lable"></label>
            <input asp-for="DisplayOrder" disabled class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="CreatedDateTime" class="control-lable"></label>
            <input asp-for="CreatedDateTime" disabled class="form-control" />

        </div>

        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary" style="width: 160px; border: 1px solid #000000;">Back to list</a>
    </div>
</form>

@section Scripts{
    @{

        <partial name="_ValidationScriptsPartial" />
    }
}

